<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/item_center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/item_currency_flag"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/eu"/>

    <TextView
        android:id="@+id/item_currency_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_currency_flag"
        android:layout_toRightOf="@id/item_currency_flag"
        android:layout_above="@id/item_center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="USD"
        android:textColor="@color/colorTextPrimary"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/item_currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignStart="@id/item_currency_code"
        android:layout_alignLeft="@id/item_currency_code"
        android:layout_below="@id/item_currency_code"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="US Dollar"
        android:textColor="@color/colorTextSecondary"
        android:textSize="14sp"
        />

    <EditText
        android:id="@+id/item_currency_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="end"
        android:text="125"
        android:textColor="@color/colorTextPrimary"
        android:textSize="20sp"
        android:inputType="numberDecimal" />

</RelativeLayout>