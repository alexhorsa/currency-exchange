<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_currency_flag"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/eu"/>

    <TextView
        android:id="@+id/item_currency_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_currency_flag"
        android:layout_toRightOf="@id/item_currency_flag"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="CODE"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/item_currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignStart="@id/item_currency_code"
        android:layout_alignLeft="@id/item_currency_code"
        android:layout_below="@id/item_currency_code"
        android:gravity="center"
        android:text="Name"
        android:textSize="12sp"
        />

    <EditText
        android:id="@+id/item_currency_value"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:text="125"
        android:inputType="numberDecimal" />

</RelativeLayout>